

function beer() {
    var i = 99;
    var d = i - 1;
  while (i <=100 && i >= 1) {
      console.log( i + " bottles of beer on the wall, " + i  + " bottles of beer. Take one down and pass it around, " + d + " bottles of beer on the wall.");
      i--;
      d--;
      }

    if (i === 0) {
      console.log("No more bottles of beer on the wall, no more bottles of beer. Go to the store and buy some more, 99 bottles of beer on the wall.")
    }

}
          

